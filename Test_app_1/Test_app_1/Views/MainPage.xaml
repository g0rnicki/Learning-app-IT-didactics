<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test_app_1.Views.MainPage"
             BackgroundColor="{AppThemeBinding 
                    Dark={StaticResource BackgroundColorDark}, 
                    Light={StaticResource BackgroundColor}}">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label x:Name="Greeting"
                Text=""
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="Title"
                Padding="50"/>
            <Label
                Text="Your progress so far:"
                VerticalOptions="Start" 
                HorizontalOptions="Start"
                FontSize="Medium"/>
            <Label x:Name="Statistic1"
                Text=""
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Label x:Name="Statistic2"
                Text=""
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Label x:Name="Statistic3"
                Text=""
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
        </StackLayout>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked" Text="Logout" />
    </ContentPage.ToolbarItems>
</ContentPage>